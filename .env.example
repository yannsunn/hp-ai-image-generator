# API Keys - 必須設定
OPENAI_API_KEY=your_openai_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Optional: Vercel KV Storage (画像履歴保存用)
KV_URL=your_vercel_kv_url_here
KV_REST_API_URL=your_vercel_kv_rest_api_url_here
KV_REST_API_TOKEN=your_vercel_kv_rest_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_vercel_kv_read_only_token_here

# API Configuration
NODE_ENV=production
PORT=3000

# Image Generation Settings
MAX_IMAGE_SIZE=2048
IMAGE_QUALITY=100
DEFAULT_MODEL=replicate/flux-pro-ultra

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*