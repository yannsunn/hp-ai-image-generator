{
  "buildCommand": "cd frontend && npm cache clean --force && rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "echo 'Skip root install'",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    },
    "api/analyze-with-playwright.js": {
      "maxDuration": 90
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://hp-ai-gen.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, X-User-Id"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "FORCE_COLOR": "0"
  }
}