{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/api",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"]
    },
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}