{
  "compilerOptions": {
    "outDir": "../dist/api",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noEmitOnError": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"]
    },
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}