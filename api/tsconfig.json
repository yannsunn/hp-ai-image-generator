{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/api",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "declaration": false,
    "sourceMap": false,
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"]
    },
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}